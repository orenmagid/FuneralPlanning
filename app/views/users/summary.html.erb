<h2>User Summary</h2>

  <h3><%= @user.username%>'s Contacts:</h3>

  <ul>
    <% @user.contacts.each do |contact| %>
      <li><%= link_to contact.name, contact %> // Email: <%= contact.email %></li>
    <% end %>
  </ul>

  <%= render partial: "shared/crud_button", locals: {path: new_contact_path(@user), method: "GET", value: "Create a New Contact"} %>

  <%= render partial: "shared/funerals_show.html.erb", locals: { funeral: @funeral } %>
